<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.memo.post.dao.PostDAO">
 	<insert id="insertPost" parameterType="map">
    	INSERT INTO `post`
		(
			`userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{subject}
			, #{content}
			, #{imagePath}
			, NOW()
			, NOW()
		)
    </insert>
    
    <select id="selectPostList" parameterType="int" resultType="com.memo.post.model.Post">
 		SELECT
 			`id`
 			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId`= #{userId}
		ORDER BY `id` DESC
    </select>
    
    <select  id="selectPostDetailById" parameterType="int" resultType="com.memo.post.model.Post">
    	SELECT
 			`id`
 			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`id`= #{id}
    </select>
    
    <update id="updatePostById" parameterType="map">
 		UPDATE `post`
 		SET
 			`subject` = #{subject}
 			,`content` = #{content}
 			,`imagePath` = #{imagePath}
 			,`updatedAt` = NOW()
 		WHERE
 			`id` = #{id}
 	</update>
 	
 	<delete id="deletePostById" parameterType="int">
 		DELETE
		FROM
			`post`
		WHERE
			`id` = #{id}
 	</delete>
 </mapper>